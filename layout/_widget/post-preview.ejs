<div class="post-preview">
    <div class="post-img" style="background-image: url('<%= config.root %><%= post.image %>')"></div>
    <div class="post-info">
        <div class="post-info-center">
            <div class="hidden-xs">
                <!-- 标记置顶信息 -->
                <% if (post.top && !is_post()){ %>
                <span>[置顶]</span>
                <% } %>

                <!-- 添加标签信息 -->
                <% if (post.tags.length){%>
                <span>/</span>
                <% post.tags.forEach(function(tag){ %>
                <a class="text-gray" href="<%= config.root %>tags/#<%= tag.name %>"
                    title="<%= tag.name %>"><%= tag.name %></a>
                <span>/</span>
                <% }) %>
                <% } %>
            </div>

            <!-- 文章链接 -->
            <a href="<%= config.root %><%- post.path %>" class="title">
                <%- post.title || "Untitled" %>
            </a>
            <p class="text-gray">
                <small>
                    <span>发表于<%= post.date.format('YYYY-MM-DD') %>，</span>
                    <span class="hidden-xs">全文<%= post.raw.length %>字，</span>
                    <span>预计需阅读<%= Math.ceil(post.raw.length / 300) %>分钟</span>
                </small>
            </p>
        </div>
    </div>
</div>